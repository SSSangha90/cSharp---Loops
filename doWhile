    class Program
    {
        static void Main(string[] args)
        {   // This is a while loop!
            //    Console.WriteLine("Guess the answer to the following riddle...");
            //    Console.WriteLine ("\n You are in a dark room with a candle, a wood stove and a gas lamp. You only have one match,  what do you light first?");
            //    string answer = "Match!";
            //string userGuess = Console.ReadLine();

            //    while (userGuess != answer)
            //    {
            //        Console.WriteLine("Nope, try again buster!");
            //        userGuess = Console.ReadLine();
            //    }
            //}

            // This is a Do While Loop!

            Console.WriteLine("What can travel around the world while staying in a corner?");
            string answer = "a stamp";
            string userGuess; // just initiate the variable outside the local scope i.e string ____;

            do
            {
                Console.WriteLine("\nGuess the answer to the  riddle above...");
                userGuess = Convert.ToString(Console.ReadLine().ToLower()); // then just call the variable and define it inside the local scope! i.e userGuess = 
            }
            while (userGuess != answer);
            Console.WriteLine("That's correct, well done!");
            }
        }
    }
